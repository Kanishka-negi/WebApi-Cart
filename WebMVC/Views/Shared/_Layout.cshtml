<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <style>

                    .navbar {
                        background-color: #471E4C;
                    }

                    .navbar-brand img {
                        width: 100px;
                        height: 50px;
                    }

                    .navbar-brand .title {
                        font-size: 20px;
                        color: #000;
                        font-weight: bold;
                    }
                </style>
                <a class="navbar-brand" asp-area="" asp-controller="Movie" asp-action="Index">
                    
                    <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcS-9DsjzgH9KgpiXYWuPY0Rx7q_BTzhw_tfI8Ppqlv-KwMdzKeU" alt="Live The Movie">
                    <span class="badge bg-success text-white">LIVE THE MOVIE</span>
                   

                </a>

               
               
                <h4 class="text-center">Endless Entertainment Anytime. Anywhere !!</h4>

                <form class="search-form" asp-controller="Movies" asp-action="Filter" style="padding-right: 25px;">
                    <input type="text" class="search-input" placeholder="Search...">
                    <input type="submit" class="search-submit" value="Search">
                    
                </form>




        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                      
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebMVC</a>*@
                       @* <a class="navbar-brand" asp-area="" asp-controller="AccountConsumed" asp-action="Login"><span class="badge bg-success text-white">Login</span></a>*@
                        <a class="navbar-brand" asp-area="" asp-controller="AccountConsumed" asp-action="Register"><span class="badge bg-success text-white">Register</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                </div>
            </div>
        </nav>
              
    </header>
    <div class="container">
       
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
